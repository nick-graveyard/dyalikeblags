

 <% @posts.each do |post| %>
    
      <div class="row  custom_index_row">

      <div class="row">
        <div class="col-md-12">
        <h4>
          <div style="text-decoration:underline">
            <%= link_to post.title, public_post_path(post), style: "" %>
          </div>

            <%= post.created_at.to_date %> 
              By: <%= post.user_id %> 
        </h4>


            

        </div>
      </div>
        

        <div class="row">
        <div class="col-md-12">

          <div><%= image_tag post.image ,class: "img-rounded", style: "border:1px black solid; float:left; margin-right:20px",  width: '15%', height: 'auto' %>
          </div>
        
          <div class ="custom_body_column">
              <%= truncate simple_format(post.content), length: 1100  %>
          </div>
        
        </div>
        </div>
    

      </div>
<%#link_to 'Edit', edit_post_path(@post) %> 

 <% end %>
